{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Backend Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "cwd": "${workspaceFolder}/backend"
    },

    {
      "name": "Python Debugger: Preprocess Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/preprocess"
      },
      "cwd": "${workspaceFolder}/preprocess"
    },

    {
      "name": "Python Debugger: Preprocess .anim",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/preprocess"
      },
      "cwd": "${workspaceFolder}/preprocess",
      "args": [
        "--path",
        "./graphics/anim",
        "--output",
        "./output/anim",
        "--sd",
        "--hd"
      ]
    }
  ]
}
